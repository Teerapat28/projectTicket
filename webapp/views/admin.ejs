    <div class="ad-features">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading">
                    </div>
                </div>
                    <div class="col-md-12"> 
                        <center>
                          <form id="SearchForm" action="search" method="POST">
                            <h3><center> Data management page </center></h3> <br>
                        
                            <div class="form-group">
                              <div class="col-md-4">
                                <input type="text" id="word" name="word" class="form-control" placeholder="Enter show name here" value="">
                              </div>
                              <button type="submit" class="filled-button">Search</button>
                            </div>  
                          </form>
                        </center>

                            <div class="card">
                                <div class="card-body">
                                    <center>
                                        <table border="1">

                                            <thead>
                                                <tr>
                                                    <th>Show id</th>
                                                    <th>Show name</th>
                                                    <th>Description</th>
                                                    <th>Booking date</th>
                                                    <th>End Booking date</th>
                                                    <th>Hall name</th>
                                                    <th width="100px">Operation</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                              
                                              <% data.forEach ( function (data, index ) 
                                                 { 
                                                    %>
                                                    <tr>
                                                        <td><%= data.Show_ID %></td>
                                                        <td><%= data.ShowName %></td>
                                                        <td><%= data.Desc %></td>
                                                        <td><%= data.BookingDate %></td>
                                                        <td><%= data.Endate %></td>
                                                        <td><%= data.HallName %></td>
                                                        <td style="text-align: center;">
                                                        <a class="filled-button" href="">Edit</a>
                                                        <a class="filled-button" href="">Delete</a>
                                                        </td>
                                                    </tr>
                                                 <% }); %>
                                            </tbody>
                                        </table>
                                                        <a class="filled-button" href="">Add show</a>
                                                        <a class="filled-button" href="">Export</a>
                                                        <a class="filled-button" href="/">Main page</a>
                                        </center>
                                </div>
                              </div>    
                    </div>    
                </div>
